<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.blockchain.store.playstore.AppDetailActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:id="@+id/investBtn"
        android:layout_width="172dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="180dp"
        android:background="@color/investButtonColor"
        android:elevation="0dp"
        android:onClick="investApp"
        android:text="Invest"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground" />

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="172dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="180dp"
        android:background="@color/buyButtonColor"
        android:onClick="buyApp"
        android:text="Buy"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toRightOf="@+id/investBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="108dp"
        android:layout_height="111dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_snapchat"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        app:layout_constraintRight_toLeftOf="@+id/AppNameBody"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/AppPrice"
        android:layout_width="156dp"
        android:layout_height="29dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="72dp"
        android:onClick="buyApp"
        android:text="Price: 0.0"
        android:textAlignment="textEnd"
        android:textColor="@color/priceTextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/AppNameBody"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/AppNameBody"
        android:layout_width="247dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:onClick="buyApp"
        android:text="App Name"
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appLongDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Life's more fun when you live in the moment :) Happy Snapping!Life's more fun when you live in the moment :) Happy Snapping!\n\n\n  * * * \n\n\nPlease note: Snapchatters can always capture or save your messages, such as by taking a screenshot or using a camera. Be mindful of what you Snap! " />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="92dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/header2"
        tools:layout_editor_absoluteY="-10dp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="22dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/backarrow"
        android:backgroundTint="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/AppNameTitle"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="26dp"
        android:onClick="buyApp"
        android:text="App Name"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="22dp" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="27dp"
        android:background="@mipmap/ic_search"
        android:backgroundTint="@android:color/background_light"
        app:layout_constraintRight_toRightOf="@+id/headerBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/actionBtnBackground"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="171dp"
        android:background="@color/appDetailButtonBackground"
        android:scaleType="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBackground" />

    <ImageView
        android:id="@+id/starsRatingImg"
        android:layout_width="109dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconView"
        app:srcCompat="@drawable/stars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="45dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:text="4.5"
        android:textSize="21sp"
        app:layout_constraintLeft_toRightOf="@+id/starsRatingImg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iconView" />

    <TextView
        android:id="@+id/developerName"
        android:layout_width="252dp"
        android:layout_height="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="31dp"
        android:text="Snap, Inc."
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        app:layout_constraintTop_toBottomOf="@+id/AppNameBody"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="172dp"
        tools:layout_editor_absoluteX="152dp"
        app:layout_constraintHorizontal_bias="0.44" />

</android.support.constraint.ConstraintLayout>